# Configuration du serveur
PORT=5000
NODE_ENV=development

# Authentification
# ⚠️ NE PAS utiliser de mot de passe en clair !
ADMIN_PASSWORD=adm
# ⚠️ IMPORTANT : Générez un hash avec: node generate-password.js
# Hash bcrypt du mot de passe admin (généré via le script) : puiArdon
ADMIN_PASSWORD_HASH=$2b$10$/3L1O/QUtgvrRP3JRcf.Xeka9xhKJnqOHk4bmCF.8l13GkgpVxLli

# Format d'import des clients
# Valeurs possibles: LEGACY, MHCARE
# LEGACY = Format historique (virgules, headers originaux)
# MHCARE = Format MHcare (point-virgule, filtres STATUT)
CLIENT_IMPORT_FORMAT=LEGACY

# Pseudo-anonymisation
# Active l'anonymisation en mode consultation (guest)
ANONYMIZE_GUEST=false

# Active l'anonymisation en mode modification (admin)
ANONYMIZE_ADMIN=false

# Mode sombre
# Valeurs possibles: active, inactive, system
# - active: mode sombre toujours activé
# - inactive: mode clair toujours activé
# - system: suit les préférences du système d'exploitation
DARK_MODE=system

# Alerte import clients
# Durée en jours après laquelle une alerte s'affiche si aucun import
# Recommandé: 4 jours pour une mise à jour hebdomadaire
CLIENT_IMPORT_WARNING_DAYS=4

# Backup automatique
# Fréquence des backups automatiques en heures
# Valeurs recommandées:
# - 24 (quotidien)
# - 12 (2x par jour)
# - 6 (4x par jour)
# - 1 (toutes les heures)
# Mettre 0 pour désactiver les backups automatiques
BACKUP_FREQUENCY_HOURS=24

# Nombre de backups à conserver
# Les plus anciens sont supprimés automatiquement
BACKUP_RETENTION_COUNT=4

# SQLite utilise un fichier app.db créé automatiquement
# Aucune configuration supplémentaire requise

# Configuration des zones et casiers
# Format : ZONE_NAMES=NOM1,NOM2,NOM3
#          ZONE_COUNTS=nombre1,nombre2,nombre3
#          ZONE_PREFIXES=PREFIX1,PREFIX2,PREFIX3 (optionnel)
# Exemple 5 zones
# ZONE_NAMES=NORD,SUD,EST,OUEST,CENTRE
# ZONE_COUNTS=50,50,30,30,25
# ZONE_PREFIXES=N,S,E,O,C
ZONE_NAMES=NORD,SUD,PCA,REC
ZONE_COUNTS=75,75,40,25
ZONE_PREFIXES=N,S,PCA,R
ZONE_COLORS=#3b82f6,#10b981,#f59e0b,#ef4444
