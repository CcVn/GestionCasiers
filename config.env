#===== Import patients
# Alerte import patients
# Durée en jours après laquelle une alerte s'affiche si aucun import
# Recommandé: 4 jours pour une mise à jour hebdomadaire
CLIENT_IMPORT_WARNING_DAYS=4

# Format d'import des patients
# Valeurs possibles: BASIQUE, MHCARE, WINPHARM
CLIENT_IMPORT_FORMAT=MHCARE

#===== Backup automatique
# OPTION 1 (recommandée) : Backup quotidien à heure fixe
# Format: HH:MM en heure locale (ex: 00:00 pour minuit, 02:30 pour 2h30)
# Avantage: évite les backups pendant les heures d'utilisation
BACKUP_TIME=00:00

# OPTION 2 : Backup périodique (ignoré si BACKUP_TIME est défini)
# Fréquence en heures : 24 (quotidien), 12 (2x/jour), 6 (4x/jour), 1 (horaire)
# Mettre 0 pour désactiver les backups automatiques
BACKUP_FREQUENCY_HOURS=24

# Nombre de backups à conserver (les plus anciens sont supprimés)
BACKUP_RETENTION_COUNT=7


